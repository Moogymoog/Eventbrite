
<div class="container mx-auto">
  <table class="table table-striped mt-4" style="background-color: #e3f2fd;">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Date</th>
        <th scope="col">Durée</th>
        <th scope="col">Titre</th>
        <th scope="col">Lieu</th>
        <th scope="col">Prix</th>
        <th scope="col">Organisateur</th>
      </tr>
    </thead>
    <tbody>
      <% @events.each do |event| %>
        <tr>
          <% if event.is_validate == true %>
          <th scope="row"><%= event.id %></th>
          <td><%= event.start_date.strftime('%F') %></td>
          <td><%= event.duration %>mn</td>
          <td><%= event.title %></td>
          <td><%= event.location %></td>
          <td><%= event.price %>€</td>
          <td><a href="<%= event_path(event.id) %>"><i class="fas fa-eye"></i></a></td>
          <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>